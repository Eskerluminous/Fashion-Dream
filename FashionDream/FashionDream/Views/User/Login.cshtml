@model FashionDream.Models.UserAccount
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/DemoLayout.cshtml";

}


<style>

    .body {
        margin: 2px;
        padding: 2px;
        align: center;
        background-image: url("~/Images/burgess-milner-OYYE4g-I5ZQ-unsplash.jpg");
    }

    .SideBox_Img {
        border-radius: 14px;
    }

    .MainBox {
        margin-top: 50px;
        background-image: url("~/Images/burgess-milner-OYYE4g-I5ZQ-unsplash.jpg");
        box-shadow: 30px;
        display: flex;
        width: 1000px;
        height: 600px;
        margin-left: 350px;
        margin-top: 40px;
        margin-bottom: 40px;
        background: #f5f6fa;
        height: 400px;
        border-radius: 14px;
    }

    .RegPera {
        margin-top: 30px;
        font-size: 20px;
        margin-left: 90px;
        color: #487eb0;
    }

    .input {
        margin-left: 20px;
        border-radius: 10px;
        border: 1px dotted black;
        width: 230px;
        height: 20px;
        margin-left: 30px;
        margin-bottom: 10px;
    }

    .Register_btn {
        margin-top: 10px;
        width: 237px;
        border-radius: 10px;
        border: 1px solid black;
        height: 25px;
        color: white;
        margin-left: 30px;
        background: #2e86de;
        font-size: 13px;
    }

    .login_btn {
        margin-top: 10px;
        width: 237px;
        border-radius: 10px;
        border: 1px solid black;
        height: 25px;
        color: white;
        margin-left: 30px;
        background: #2e86de;
        font-size: 13px;
    }

    .labelFor {
        margin-top: 5px;
        width: 100px;
        border-radius: 10px;
        height: 25px;
        color: black;
        margin-left: 30px;
        font-size: 13px;
    }
</style>



<div class="body">
    <br><br><br><br>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken();
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <form action="~/User/Login" method="post">
            <div class="MainBox">


                <div class="SideBox">

                    <img src="~/Images/RegistrationImage.jpg" width="300" height="400" class="SideBox_Img">
                </div>

                <div class="RegBox">

                    <p class="RegPera">Login</p>

                    <div>
                        @Html.LabelFor(model => model.FirstName, htmlAttributes: new { @class = "labelFor" })
                    </div>
                    <div>
                        @Html.EditorFor(model => model.FirstName, new { htmlAttributes = new { @class = "input" } })
                        @Html.ValidationMessageFor(model => model.FirstName, "", new { @class = "text-danger" })

                    </div>
                    <!-- <input type="text" name="FirstName" placeholder="FirstName" class="input"> -->



                    <div>
                        @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "labelFor" })
                    </div>
                    <div>
                        @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "input" } })
                        @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                        <!-- <input type="text" name="Email" placeholder="Email" class="input">-->

                    </div>





                    <div>
                        @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "labelFor" })
                    </div>
                    <div>
                        @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "input" } })
                        @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                        <!-- <input type="password" name="Password" placeholder="Password" class="input"> -->
                    </div>

                    <p class="text-danger">@ViewBag.missmatch</p>
                    <button type="submit" class="login_btn ">Submit</button>
                    <br>
                    <button type="submit" class="login_btn btn-secondary">@Html.ActionLink("Goto Registration", "Registration")</button>
                    <br>
                    <button type="submit" class="login_btn btn-secondary">@Html.ActionLink("Goto AdminLogin", "AdminLogin")</button>


                </div>
            </div>

        </form>

    }

</div>



