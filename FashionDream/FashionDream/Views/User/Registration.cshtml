@model FashionDream.Models.UserAccount
@{
    ViewBag.Title = "Registration";
    Layout = "~/Views/Shared/DemoLayout.cshtml";
}

<style>
    .MainBody {
        background-image: url("~/Images/burgess-milner-OYYE4g-I5ZQ-unsplash.jpg");
        width: 1200px;
        height: 1000px;
    }
    .body {
        //background: #0097e6;
        background-image: url(~/Images/BG_FASHION.jpg);
        width: 1200px;
        height: 1000px;
        align: center;
    }

    .SideBox_Img {
        border-radius: 14px;
    }

    .MainBox {
        margin-top: 50px;
        background-image: url("~/Images/burgess-milner-OYYE4g-I5ZQ-unsplash.jpg");
        box-shadow: 30px;
        display: flex;
        width: 1200px;
        height: 1000px;
        margin-left: 350px;
        margin-top: 40px;
        margin-bottom: 40px;
        background: #f5f6fa;
        height: 400px;
        border-radius: 14px;
    }


    .RegPera {
        margin-top: 0px;
        font-size: 20px;
        margin-left: 90px;
        color: #487eb0;
    }

    .input {
        margin-left: 20px;
        border-radius: 10px;
        border: 1px dotted black;
        width: 230px;
        height: 20px;
        margin-left: 30px;
        margin-bottom: 10px;
    }



    .login_btn {
        margin-top: 10px;
        width: 237px;
        border-radius: 10px;
        border: 1px solid black;
        height: 25px;
        color: white;
        margin-left: 30px;
        background: #2e86de;
        font-size: 13px;
    }

    .labelFor {
        margin-top: 5px;
        width: 100px;
        border-radius: 10px;
        height: 25px;
        color: black;
        margin-left: 30px;
        font-size: 13px;
    }
    .DIIV {
        width: 700px;
        height: 1000px;
    }
</style>
<body class="MainBody">

    <h2>Registration</h2>

    <div class="body">
        <br><br><br><br>
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken();
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <form action="~/User/Registration" method="post">
                <div class="MainBox">


                    <div class="SideBox">

                        <img src="~/Images/RegistrationImage.jpg" width="300" height="400" class="SideBox_Img">
                    </div>

                    <div class="RegBox">

                        <p class="RegPera">Register</p>
                        <div class="DIIV">
                            <!-- FirstName -->
                            <div>
                                @Html.LabelFor(model => model.FirstName, htmlAttributes: new { @class = "labelFor" })
                                <span>
                                    @Html.EditorFor(model => model.FirstName, new { htmlAttributes = new { @class = "input" } })
                                    @Html.ValidationMessageFor(model => model.FirstName, "", new { @class = "text-danger" })
                                </span>
                            </div>

                            <!-- LastName -->
                            <div>
                                @Html.LabelFor(model => model.LastName, htmlAttributes: new { @class = "labelFor" })
                                <span>
                                    
                                        @Html.EditorFor(model => model.LastName, new { htmlAttributes = new { @class = "input" } })
                                        @Html.ValidationMessageFor(model => model.LastName, "", new { @class = "text-danger" })

                                    
                                </span>        
                            </div>

                            <!-- Address -->
                            <div>
                                @Html.LabelFor(model => model.Address, htmlAttributes: new { @class = "labelFor" })
                                <span>


                                        @Html.EditorFor(model => model.Address, new { htmlAttributes = new { @class = "input" } })
                                        @Html.ValidationMessageFor(model => model.Address, "", new { @class = "text-danger" })

                                    
                                </span>
                            </div>

                            <!-- Phone  -->
                            <div>
                                @Html.LabelFor(model => model.Phone, htmlAttributes: new { @class = "labelFor" })
                                <span>
                                    
                                        @Html.EditorFor(model => model.Phone, new { htmlAttributes = new { @class = "input" } })
                                        @Html.ValidationMessageFor(model => model.Phone, "", new { @class = "text-danger" })

                                    
                                </span>
                            </div>

                            <!-- Email -->
                            <div>
                                @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "labelFor" })
                                <span>
                                    @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "input" } })
                                    @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                                </span>
                            </div>

                            <!-- Password -->
                            <div>
                                @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "labelFor" })
                                <span>
                                    @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "input" } })
                                    @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                                </span>
                            </div>

                            <!-- DateOfBirth -->
                            <div>
                                @Html.LabelFor(model => model.DateOfBirth, htmlAttributes: new { @class = "labelFor" })
                            </div>
                            <div>
                                <input type="date" name="DateOfBirth" class="input" placeholder="Date of birth" />

                            </div>


                            <!--
        <input type="text" name="FirstName" placeholder="FirstName" class="input">

        <input type="text" name="LastName" placeholder="LastName" class="input">

        <input type="text" name="Address" placeholder="Address" class="input">

        <input type="text" name="Phone" placeholder="Phone" class="input">

        <input type="text" name="Email" placeholder="Email" class="input">

        <input type="password" name="Password" placeholder="Password" class="input">
        <input type="date" name="DateOfBirth" placeholder="DateOfBirth Password" class="input">
        -->

                            <input type="password" name="ConfirmPassword" placeholder="Confirm Password" class="input">

                            <div>
                                <button type="submit" class="login_btn ">Submit</button>

                            </div>

                            <br>
                            <button type="submit" class="login_btn btn-secondary">@Html.ActionLink("Goto Login", "Login")</button>
                            <br>
                            <button type="submit" class="login_btn btn-secondary">@Html.ActionLink("Goto AdminLogin", "AdminLogin")</button>



                        </div>




                        </div>


                    </div>
            </form>
        }
        </div>


</body>
