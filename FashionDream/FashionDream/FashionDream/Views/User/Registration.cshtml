
@{
    ViewBag.Title = "Registration";
}

<style>

    .body {
        //background: #0097e6;
        margin: 2px;
        padding: 2px;
        align : center;
    }

    .SideBox_Img {
        border-radius: 14px;
    }

    .MainBox {
        box-shadow: 30px;
        display: flex;
        width: 700px;
        height: 600px;
        margin-left: 250px;
        margin-top: 40px;
        margin-bottom: 40px;
        background: #f5f6fa;
        height: 400px;
        border-radius: 14px;
    }

    .RegPera {
        margin-top: 30px;
        font-size: 20px;
        margin-left: 90px;
        color: #487eb0;
    }

    .input {
        margin-left:20px;
        
        border-radius: 10px;
        border: 1px dotted black;
        width: 230px;
        height: 20px;
        margin-left: 30px;
        margin-bottom: 10px;
    }

    .Register_btn {
        margin-top: 10px;
        width: 237px;
        border-radius: 10px;
        border: 1px solid black;
        height: 25px;
        color: white;
        margin-left: 30px;
        background: #2e86de;
        font-size: 13px;
    }

    .login {
        margin-top: 10px;
        width: 237px;
        border-radius: 10px;
        border: 1px solid black;
        height: 25px;
        color: white;
        margin-left: 30px;
        background: #2e86de;
        font-size: 13px;
    }
</style>


<h2>Registration</h2>

<div class="body">

    <form action="~/User/Registration" method="post">
        <div class="MainBox">


            <div class="SideBox">

                <img src="~/Images/RegistrationImage.jpg" width="300px" height="400px" class="SideBox_Img">
            </div>

            <div class="RegBox">

                <p class="RegPera">Register</p>

                <input type="text" name="FirstName" placeholder="FirstName" class="input">

                <input type="text" name="LastName" placeholder="LastName" class="input">

                <input type="text" name="Address" placeholder="Address" class="input">

                <input type="text" name="Phone" placeholder="Phone" class="input">

                <input type="text" name="Email" placeholder="Email" class="input">

                <input type="password" name="Password" placeholder="Password" class="input">
                <input type="date" name="DateOfBirth" placeholder="DateOfBirth Password" class="input">

                <input type="password" name="ConfirmPassword" placeholder="Confirm Password" class="input">



                <button type="submit" class="login">Submit</button>



            </div>







        </div>
    </form>

</div>

<div>
    @Html.ActionLink("Goto Login", "Login")
</div>
<div>
    @Html.ActionLink("Goto Admin", "AdminLogin")
</div>




